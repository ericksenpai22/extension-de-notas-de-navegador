{
  "manifest_version": 2,
  "name": "Anotador",
  "description": "Esta extensi√≥n permite crear y guardar anotaciones en el navegador Chrome",
  "version": "1.0",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/pov16.png",
      "32": "images/pov32.png",
      "48": "images/pov48.png",
      "128": "images/pov128.png"
    }
  },
  "icons" : {
    "16": "images/pov16.png",
      "32": "images/pov32.png",
      "48": "images/pov48.png",
      "128": "images/pov128.png"
  }
}
